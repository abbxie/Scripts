local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local root = character:WaitForChild("HumanoidRootPart")

local worldBlocks = workspace:WaitForChild("WorldBlocks")

-- ðŸ”§ SETTINGS
local FRONT_ONLY = true   -- set to false if you want closest dirt anywhere
local DOT_THRESHOLD = 0.5 -- how "in front" it must be (1 = perfectly ahead, 0 = 90Â° to side)

-- Highlight object
local highlight = Instance.new("SelectionBox")
highlight.LineThickness = 0.05
highlight.SurfaceTransparency = 0.5
highlight.Color3 = Color3.fromRGB(255, 0, 0)
highlight.Parent = game.CoreGui -- put in CoreGui so it stays visible

-- Function to find closest Dirt
local function getClosestDirt()
    local closest = nil
    local shortestDist = math.huge
    local lookVector = root.CFrame.LookVector

    for _, block in ipairs(worldBlocks:GetChildren()) do
        local dirt = block:FindFirstChild("Dirt")
        if dirt and dirt:IsA("BasePart") then
            local dist = (dirt.Position - root.Position).Magnitude

            -- Check if in front (only if FRONT_ONLY = true)
            local inFront = true
            if FRONT_ONLY then
                local dirToBlock = (dirt.Position - root.Position).Unit
                local dot = lookVector:Dot(dirToBlock)
                inFront = dot > DOT_THRESHOLD
            end

            if inFront and dist < shortestDist then
                shortestDist = dist
                closest = dirt
            end
        end
    end

    return closest
end

-- Update loop
while task.wait(0.2) do
    local closest = getClosestDirt()
    if closest then
        highlight.Adornee = closest
    else
        highlight.Adornee = nil
    end
end
