local goldenEggIndex = nil

local args = {
    [1] = "Golden Spotted Egg",
    [2] = false,
    [3] = true
}

local function callGoldenEggRemote()
    local children = game:GetService("ReplicatedStorage"):GetChildren()

    if goldenEggIndex then
        local child = children[goldenEggIndex]
        local success = pcall(function()
            child:InvokeServer(unpack(args))
        end)
        if success then
            print("Used saved remote index:", goldenEggIndex)
            return true
        else
            print("Saved remote index failed:", goldenEggIndex)
            goldenEggIndex = nil -- reset if fails
        end
    end

    for i = 1, math.min(1000, #children) do
        local child = children[i]
        local success = pcall(function()
            child:InvokeServer(unpack(args))
        end)
        if success then
            goldenEggIndex = i
            print("Found working remote index:", goldenEggIndex)
            return true
        end
    end

    print("No working remote found from 1 to 1000")
    return false -- no remote worked
end

-- Call the remote (can be looped or triggered as needed)
callGoldenEggRemote()
